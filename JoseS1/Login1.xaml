<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JoseS1.Login1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="LOGIN!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="https://univercimas.com/wp-content/uploads/2021/05/Logo-de-la-Universidad-Tecnologica-Israel-UTI.png"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese su Usuario" Grid.Row="0" Grid.Column="1"/>

            <Entry x:Name="txtContraseña" Placeholder="Ingrese su Contraseña" IsPassword="True" Grid.Row="1" Grid.Column="1"/>
            <Button x:Name="btnIngresar" Text="INICIAR" Clicked="btnIngresar_Clicked"/>
          

        </StackLayout>
    </ContentPage.Content>
</ContentPage>